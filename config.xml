<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bgg.fingertheballoons" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Finger The Balloons</name>
    <description>
        A simple tapping game.
    </description>
    <author email="blackclown0@gmail.com" href="">
        BG Games
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon density="mdpi" src="ftb_icon/res/mipmap-mdpi/ftb_icon.png" />
        <icon density="hdpi" src="ftb_icon/res/mipmap-hdpi/ftb_icon.png" />
        <icon density="xhdpi" src="ftb_icon/res/mipmap-xhdpi/ftb_icon.png" />
        <icon density="xxhdpi" src="ftb_icon/res/mipmap-xxhdpi/ftb_icon.png" />
        <icon density="xxxhdpi" src="ftb_icon/res/mipmap-xxxhdpi/ftb_icon.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <preference name="KeepRunning" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="0" />
    <engine name="android" spec="~6.2.3" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="admob" spec="^5.5.0" />
    <plugin name="cordova-plugin-globalization" spec="^1.0.7" />
    <plugin name="cordova-plugin-media" spec="^3.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
